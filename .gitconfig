[color]
	ui = true
[core]
	pager = ~/.diff-so-fancy/diff-so-fancy | less -RFX
[push]
	default = simple
[rebase]
	autostash = true
[include]
	path = ~/.gitconfig.local
[log]
	abbrevCommit = true
[alias]
	lol = log --date=iso-local --pretty=format:'%C(yellow)%h%d%Creset%n%C(green)%an   %ad%Creset%n%C(cyan)%cn   %cd%Creset%n%n%w(,4,4)%s%n%n%b%n%N'
[advice]
	detachedHead = false
[sendemail]
	suppresscc = self
	confirm = always
[init]
	defaultBranch = main
